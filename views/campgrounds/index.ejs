<% include ../partials/header %>


<div class="container">
    <header class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1>Welcome to YelpCamp!</h1>
            <p>
                <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add a new Campground</a>
            </p> 
        </div>   
    </header>
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-sm-6 col-md-4">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top rounded">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
            <!-- <figure class="col-md-6 col-lg-3 figure">
                <img class="img-thumbnail" src="<%= campground.image %>">
                <figcaption class="figure-caption"><%= campground.name %></figcaption>
                <p>
                    <a href='/campgrounds/<%= campground._id %>' class="btn btn-primary"></a>
                </p>
            </figure> -->
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>