<% include ../partials/header %>

<div class="container">
    <div>
        <h1 style="text-align:center;">Edit Comment</h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Return to Campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>